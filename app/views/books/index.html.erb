<h1>Show All Books</h1>

<%= form_tag books_path, :method => 'get' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil %>
<% end %>

<table>
  <% @books.each do |book| %>
  <tr>
    <td>Title: <%= link_to book.title, book %></td>
    <td>Tags: <%= book.tags %></td>
    <td>Description: <%= book.description %></td>
    <td>Size: <%= book.num_chapters %></td>
  </tr>
  <% end %>
</table>

<%= link_to "Create new Book", new_book_path %>
